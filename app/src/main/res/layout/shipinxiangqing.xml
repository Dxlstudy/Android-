<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".DetilActivity">

    <Button
        android:id="@+id/fanhui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#009688"
        android:visibility="visible"
        android:onClick="myClickBK"
        android:text="返回"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fanhui">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:src="@drawable/lvdagun" />

        <TextView
            android:id="@+id/biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image2"
            android:layout_marginLeft="147dp"
            android:text="驴打滚"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/jieshao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/biaoti"
            android:paddingTop="60dp"
            android:text="详细介绍"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jieshao"
            android:text="评论:"
            android:textSize="20dp" />

        <TextView

            android:id="@+id/neirong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jieshao"
            android:layout_toRightOf="@id/pinglun"
            android:text="非常好吃"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/dianzan"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_below="@id/neirong"
            android:layout_alignParentRight="true"
            android:background="@drawable/dianzan"
            android:onClick="myClickDZ"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/neirong"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/common_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定" />

            <EditText
                android:id="@+id/common_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="说点什么吧"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>


        <ListView
            android:id="@+id/detail_common_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/dianzan" />
    </RelativeLayout>
</RelativeLayout>