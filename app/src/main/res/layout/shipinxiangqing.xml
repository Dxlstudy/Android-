<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".DetilActivity">

  <ImageView
    android:id="@+id/image2"
    android:layout_width="match_parent"
    android:layout_height="211dp"
    android:src="@drawable/lvdagun" />
  <TextView
    android:id="@+id/biaoti"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="147dp"
    android:layout_below="@id/image2"
    android:text="驴打滚"
    android:textSize="40dp" />
  <TextView
    android:id="@+id/jieshao"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/biaoti"
    android:paddingTop="60dp"
    android:text="详细介绍"
    android:textSize="25dp" />
  <TextView
    android:id="@+id/pinglun"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/jieshao"
    android:text="评论:"
    android:textSize="20dp" />
  <TextView

    android:id="@+id/neirong"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/jieshao"
    android:layout_toRightOf="@id/pinglun"
    android:text="非常好吃"
    android:textSize="20dp" />

  <ImageButton
    android:id="@+id/dianzan"
    android:layout_width="58dp"
    android:layout_height="58dp"
    android:layout_alignParentRight="true"
    android:layout_below="@id/neirong"
    android:background="@drawable/dianzan" />
  <Button
    android:id="@+id/fanhui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_alignParentBottom="true"
    android:background="#009688"
    android:onClick="myClickBK"
    android:text="返回"
    android:textSize="20dp" />


</RelativeLayout>